naviHeight = 32px

.helvetica
    font-family HelveticaNow
    font-weight 600

.af
    font-family 'Courier New', Courier, monospace

.times
    font-family Times
    font-weight 900

.modern
    font-family 'Courier New', Courier, monospace

.marsh
    font-family marsh

.prismaset
    font-family prismaset

.trim
    font-family trim

.geogrotesque
    font-family geogrotesque

html, body
    padding 0
    margin 0
    // overscroll-behavior none
    height 100%

body
    letter-spacing -1.5px
    font-size 46px
    line-height 50px
    font-family HelveticaNow
    webkit-font-smoothing antialiased
    font-smoothing grayscale
    background #bfbfbf

.bodySized
    letter-spacing -0.25px
    font-size 23px
    line-height 23px
    
#menu
    position absolute
    background #ffffff
    width 100vw
    height 100%
    overflow hidden
    transition transform 0.45s
    transform translate3d( 0vw, 0, 0 )
    z-index 10
    // display none
    pointer-events none
    top 0
    left -100vw
    transition left 0.4s
    &.active
        display block
        pointer-events auto
        left 0
    ul
        margin 0
        padding 0
        list-style-type none

#mainFlow
    position absolute
    top 0
    left 0
    width 100vw
    height 100%
    overflow hidden

.navi
    position fixed
    background #000000
    color #ffffff
    height naviHeight
    width 100%
    z-index 100
    font-weight 600
    font-size 23px
    letter-spacing -0.75px
    .inner
        position absolute
        font-weight 600
        top 50%
        left 50%
        width calc( 100% - 40px )
        transform translate3d( -50%, -50%, 0 )
    &#header
        top 0
        .inner
            #pageTitle
                font-weight 400
                &.main
                    margin-top -5px
                    font-weight 600
        #menuBut
            position absolute
            right 14px
            top 6px
            width 28px
            height 28px
            background-image url( './../assets/icons.svg' )
            background-repeat no-repeat
            background-size 256px 256px
            background-position -210px -18px
            transition transform 0.2s
        &.inMenu
            #menuBut
                transform rotate( 90deg ) translate3d( -2px, 0, 0 )
    &#footer
        bottom 0
        .inner
            height 100%
        .arrow
            position absolute
            top 50%
            transform translate3d( 0, -50%, 0 )
            opacity 0
            &.right
                right 0
            &.left
                left 0
            &.menu
                pointer-events none
        &[data-navitype="blockPrev"]
            .arrow.left
                opacity 0.5
                pointer-events none
        &[data-navitype="blockNext"]
            .arrow.right
                opacity 0.5
                pointer-events none
        &[data-navitype="first"]
            .arrow.right
                opacity 1
        &[data-navitype="last"]
            .arrow.left
                opacity 1
        &[data-navitype="middle"]
            .arrow.right
                opacity 1 !important
            .arrow.left
                opacity 1 !important
        &[data-navitype="none"]
            .arrow.right
                opacity 0
            .arrow.left
                opacity 0
        &[data-navitype="inMenu"]
            .arrow.right
                display none
                pointer-events none
            .arrow.left
                display none
                pointer-events none
            .arrow.menu
                opacity 1
                pointer-events auto
        

.clearfix:after {
    content ""
    display table
    clear both
}
.clearfix:after {
   content: " "; /* Older browser do not support empty content */
   visibility: hidden;
   display: block;
   height: 0;
   clear: both;
}


.page
    position absolute
    background #ffffff
    width 100vw
    height 100%
    overflow scroll
    transition transform 0.45s
    transform translate3d( 0vw, 0, 0 )
    &.inlineEditor
        background none
    &.left
        transform translate3d( -100vw, 0, 0 )
    &.right
        transform translate3d( 100vw, 0, 0 )
    &.fullscreen
        .inner
            margin naviHeight 0
    .inner
        margin naviHeight + 20px 20px naviHeight + 20px 20px
    &.active
        display block
        z-index 1
    ul.optionList
        margin 0
        padding 0
        li
            border-bottom solid 1px #444444
            position relative
            padding 15px 20px
            &.col
                color #ffffff
            &.selected::after
                font-family HelveticaNow
                content 'âˆš'
                position absolute
                right 20px
    &[data-pid="writer"]
        textarea
            outline 0px none transparent
            width 100%
            margin 0
            padding 0
            // display block
            height 100vh
            font-size 46px
            line-height 50px
            font-family HelveticaNow
            border none
    &[data-pid="size"]
        #sizeSelector
            position relative
            background rgba( 0, 0, 0, 0.8 )
            height naviHeight
            color #ffffff
            z-index 2
            font-size 36px
            .selector 
                position relative
                top -11px
                &.more
                    margin-left 20px
                &.less
                    margin-left 20px
    &[data-pid="align"]
        #alignSelector
            position relative
            background rgba( 0, 0, 0, 0.8 )
            height naviHeight
            z-index 2
            .selector
                background-image url( './../assets/icons.svg' )
                background-repeat no-repeat
                background-size 256px 256px
                background-position 0px 0px
                width 64px
                height naviHeight
                position absolute
                display inline-block
                &.left
                    left 20px
                    background-position -13px -16px
                &.center
                    left 50%
                    background-position -64px -16px
                    transform translate3d( -50%, 0 , 0 )
                &.right
                    right 20px
                    background-position -115px -16px
    &[data-pid="share"]
        ul
            list-style-type none
            margin 0
            padding 0
    &[data-pid="about"]
        ul
            list-style-type none
            margin 0
            padding 0
    &[data-pid="gallery"]
        ul
            list-style-type none
            margin 0
            padding 0
            li
                float left
                width calc( 50% - 5px )
                margin-left 10px
                margin-bottom 10px
                &:nth-child(odd)
                    margin-left 0
                .title
                    font-size 12px
                    line-height 14px
                    letter-spacing -0.2px
                    .util
                        float right 
                .imgCont
                    width 100%
                    margin-top 5px
                    img
                        display block

    
#posterPreview
    position absolute
    width 90vw
    height 132vw
    top 50%
    left 50%
    transform translate3d( -50%, -50%, 0 )
    text-align center
    background #ffffff
    overflow hidden
    // z-index 400
    pointer-events none
    &.screenshot
        top 0
        left 0
        transform translate3d( 0, 0, 0 )
    .inner
        position absolute
        top 50%
        left 50%
        transform translate3d( -50%, -50%, 0 )
        // background rgba( 0, 0, 0, 0.05 )
        transition transform 0.4s

p
    &.title
        font-weight 600
    &.wlinebreaks
        white-space pre

a
